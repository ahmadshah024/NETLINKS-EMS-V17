<odoo>
    <data>
        <!-- Inherit Patient Form View -->
        <record id="view_ems_student_attendance" model="ir.ui.view">
            <field name="model">ems.student</field>
            <field name="inherit_id" ref="ems-student.ems_student_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                        <button class="oe_stat_button" name="action_open_attendane" type="object">
                        <field string="Present" name="present_count" widget="statinfo" />
                        <field string="Absent" name="absent_count" widget="statinfo" />
                        <field string="Leave" name="leave_count" widget="statinfo" />
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>