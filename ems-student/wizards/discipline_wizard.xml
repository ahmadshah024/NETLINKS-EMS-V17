<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="report_reason_wizard_view_form" model="ir.ui.view">
        <field name="name">discipline_wizard_view_form</field>
        <field name="model">discipline.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="reason"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Report" class="btn btn-primary" type="object" name="action_report" data-hotkey="q" />
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>