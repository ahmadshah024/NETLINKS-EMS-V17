<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="accept_reason_wizard_view_form" model="ir.ui.view">
        <field name="name">change.school.wizard.view.form</field>
        <field name="model">change.school.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="new_school_name"></field>
                        </group>
                        <group>
                            <field name="docs" />
                        </group>
                        <group>
                            <field name="reason" />
                        </group>
                        <group>
                            <field name="date" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Accept" class="btn btn-primary" type="object" name="action_change" data-hotkey="q" />
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>